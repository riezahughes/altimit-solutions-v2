{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@modules": ["./src/modules"],
      "@modules/*": ["./src/modules/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@schemas": ["./src/schemas"],
      "@schemas/*": ["./src/schemas/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@context": ["./src/context"],
      "@context/*": ["./src/context/*"],
      "@helpers": ["./src/helpers"],
      "@helpers/*": ["./src/helpers/*"]
    },
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["src/**/**/*.stories.tsx", "src/**/**/*.test.tsx", "src/**/**/*.test.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
